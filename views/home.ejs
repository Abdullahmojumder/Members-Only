<h2>Messages</h2>
<% messages.forEach(message => { %>
  <div class="message">
    <h3><%= message.title %></h3>
    <p><%= message.text %></p>
    <% if (user && user.isMember) { %>
      <p>Posted by <%= message.User.firstName %> <%= message.User.lastName %> on <%= message.timestamp.toLocaleString() %></p>
    <% } %>
    <% if (user && user.isAdmin) { %>
      <form method="POST" action="/messages/delete/<%= message.id %>">
        <button type="submit">Delete</button>
      </form>
    <% } %>
  </div>
<% }) %>